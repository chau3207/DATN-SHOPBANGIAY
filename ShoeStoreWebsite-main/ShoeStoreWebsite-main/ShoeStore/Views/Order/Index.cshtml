@using ShoeStore.Ultitity;
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<ShopOrder>

@if (User.IsInRole(SD.Role_Admin))
{
    Layout = "_AdminLayout";
}
else
{
    Layout = "_Layout";
}
<link rel="stylesheet" href="~/css/custom.css" />
@{
    ViewData["Title"] = "Đơn hàng ";
    @* Layout = "_Layout"; *@

    var status = Context.Request.Query["status"];
    string pending = "";
    string inprocess = "";
    string completed = "";
    string approved = "";
    string all = "";

    switch (status)
    {
        case "pending":
            pending = "active";
            break;
        case "inprocess":
            inprocess = "active";
            break;
        case "completed":
            completed = "active";
            break;
        case "approved":
            approved = "active";
            break;
        default:
            all = "active";
            break;
    }
}

<div class="container mb-5">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-4">
        <div class="admin-title">
            <ion-icon name="settings-outline"></ion-icon>
            <div class="admin-title-content">
                <h5>Quản lý đơn hàng</h5>
                <span>Liệt kê danh sách đơn hàng </span>
            </div>
        </div>
        <div class="list-group list-group-horizontal-sm d-none d-lg-flex">
            <a class="text-nowrap list-group-item list-group-item-action @inprocess" asp-controller="Order"
                asp-action="Index" asp-route-status="inprocess">
                In Process
            </a>
            <a class="text-nowrap list-group-item list-group-item-action @pending" asp-controller="Order"
                asp-action="Index" asp-route-status="pending">
                Payment Pending
            </a>
            <a class="text-nowrap list-group-item list-group-item-action @completed" asp-controller="Order"
                asp-action="Index" asp-route-status="completed">
                Completed
            </a>
            <a class="text-nowrap list-group-item list-group-item-action @approved" asp-controller="Order"
                asp-action="Index" asp-route-status="approved">
                Approved
            </a>
            <a class="text-nowrap list-group-item list-group-item-action @all" asp-controller="Order" asp-action="Index"
                asp-route-status="all">
                All
            </a>
        </div>
    </div>

    <table id="table_id" class="custom-table">
        <thead>
            <tr>
                <th class="d-none d-lg-table-cell">
                    Id
                </th>
                <th >
                    Người dùng
                </th>
                <th class="d-none d-lg-table-cell">
                    Số điện thoại
                </th>
                <th class="d-none d-lg-table-cell">
                    Email
                </th>
                <th class="d-none d-lg-table-cell">
                    Trạng thái
                </th>
                <th>
                    Tổng tiền($)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (ShopOrder item in Model)
            {
                <tr>
                    <td class="d-none d-lg-table-cell">
                        @item.Id
                    </td>
                    <td >
                        @item.Name
                    </td>
                    <td class="d-none d-lg-table-cell">
                        @item.PhoneNumber
                    </td>
                    <td class="d-none d-lg-table-cell">
                        @if (item.ApplicationUser != null)
                        {
                            @item.ApplicationUser.Email
                        }
                    </td>
                    <td class="d-none d-lg-table-cell">
                        @item.OrderStatus
                    </td>
                    <td>
                        @item.OrderTotal
                    </td>
                    <td class="dt-nowrap">
                        @* <a asp-action="Edit" asp-route-id="@item.Id" class="btn-option" role="button"
                            data-bs-toggle="tooltip" *@
                        @* data-bs-placement="bottom" title="Edit"> *@
                        @* <i class="fa-regular fa-pen-to-square"></i> *@
                        @* </a> *@
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn-option" role="button"
                        data-bs-toggle="tooltip" data-bs-placement="bottom" title="Details">
                            <i class="fa-solid fa-circle-info"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="pagination-container custom-pagination">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions { DisplayLinkToFirstPage = PagedListDisplayMode.Never, DisplayLinkToLastPage = PagedListDisplayMode.Never })
    </div>
    <style>
        .custom-pagination {
            display: flex;
            justify-content: flex-end;
            margin-top: 20px;
        }

        .custom-pagination .pagination {
            display: flex;
            list-style: none;
            padding: 0;
        }

        .custom-pagination .pagination li {
            margin: 0 5px;
        }

        .custom-pagination .pagination li a,
        .custom-pagination .pagination li span {
            display: block;
            width: 30px; /* Chiều rộng của ô vuông */
            height: 30px; /* Chiều cao của ô vuông */
            line-height: 30px; /* Căn giữa nội dung theo chiều dọc */
            text-align: center; /* Căn giữa nội dung theo chiều ngang */
            border: 1px solid #ddd; /* Đường viền ô vuông */
            border-radius: 4px; /* Góc bo tròn, có thể bỏ nếu muốn góc vuông hoàn toàn */
            background-color: #f8f9fa; /* Màu nền */
            color: #333; /* Màu chữ */
            text-decoration: none; /* Bỏ gạch chân */
        }

        .custom-pagination .pagination li a:hover,
        .custom-pagination .pagination li span:hover {
            background-color: #007bff; /* Màu nền khi hover */
            color: white; /* Màu chữ khi hover */
        }
    </style>
</div>

