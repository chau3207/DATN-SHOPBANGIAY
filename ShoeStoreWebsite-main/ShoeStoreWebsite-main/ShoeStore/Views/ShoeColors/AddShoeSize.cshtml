@model ShoeStore.Models.ShoeSize

@{
    ViewData["Title"] = "Add Shoe Size";
    Layout = "_AdminLayout";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="AddShoeSize" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="SizeId" class="control-label"></label>
        <select asp-for="SizeId" class="form-control" asp-items="ViewBag.Sizes"></select>
        <span asp-validation-for="SizeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity" class="control-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="ShoeColorId" />
    <button type="submit" class="btn btn-primary">Save</button>
</form>