@using ShoeStore.Ultitity
@model ShoeStore.Models.ShoeSize

@{
    ViewData["Title"] = "Add Shoe Size";
    Layout = "_AdminLayout";
}

@{
    if (TempData[SD.Error] != null)
    {
        <div id="error-alert" class="alert alert-danger">
            @TempData[SD.Error]
        </div>
    }
}

<script src="~/js/Error.js"></script>
<div class="admin-title mt-4 mb-4">
    <ion-icon name="settings-outline"></ion-icon>
    <div class="admin-title-content">
        <h5>Quản lý kích thước giày</h5>
        <span>Liệt kê số lượng theo kích thước</span>
    </div>
</div>
<hr />
<div class="container p-0">
    <h3 class="title-option mb-4">Thêm kích cỡ giày</h3>
    <div class="card">
        <div class="card-body">
            <form asp-action="AddShoeSize" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="SizeId" class="control-label">Kích cỡ</label>
                    <select asp-for="SizeId" class="form-control" asp-items="ViewBag.Sizes"></select>
                    <span asp-validation-for="SizeId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label">Số lượng</label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-center align-items-center gap-3 mt-4 mb-4">
                    <input type="hidden" asp-for="ShoeColorId" />
                    <button type="submit" class="btn-save">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>