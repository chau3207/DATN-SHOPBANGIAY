@model ShoeStore.Models.ShoeSize

@{
    ViewData["Title"] = "Edit Shoe Size";
    Layout = "_AdminLayout";
}

<h2>Edit Shoe Size</h2>

<form asp-action="EditShoeSize">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ShoeColorId" />
    <div class="mb-3">
        <label asp-for="SizeId" class="form-label"></label>
        <select asp-for="SizeId" class="form-select" asp-items="ViewBag.SizeId"></select>
        <span asp-validation-for="SizeId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

<div>
    <a asp-action="Edit" asp-route-id="@Model.ShoeColorId">Back to Shoe Color</a>
</div>