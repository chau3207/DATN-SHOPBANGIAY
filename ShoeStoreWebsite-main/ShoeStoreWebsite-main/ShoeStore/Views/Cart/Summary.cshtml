                <form id="form-order" method="post" asp-action="Summary">
                    <div class="row g-3 mt-1">
                        <div class="col-md-6">
                            <label asp-for="ShopOrder.Name" class="form-label">Họ tên</label>
                            <input asp-for="ShopOrder.Name" class="form-control" placeholder="Ví dụ Nguyễn Văn A">
                            <span asp-validation-for="ShopOrder.Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ShopOrder.PhoneNumber" class="form-label">Số điện thoại</label>
                            <input asp-for="ShopOrder.PhoneNumber" class="form-control" placeholder="Ví dụ: 0123456789" disabled>
                            <input type="hidden" asp-for="ShopOrder.PhoneNumber" />
                            <span asp-validation-for="ShopOrder.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="ShopOrder.Address" class="form-label">Địa chỉ</label>
                            <input asp-for="ShopOrder.Address" class="form-control" id="inputAddress" placeholder="Ví dụ: Sô nhà .... " type="text">
                            <span asp-validation-for="ShopOrder.Address" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="ShopOrder.PostalCode" class="form-label">Mã bưu điện</label>
                            <input asp-for="ShopOrder.PostalCode" class="form-control" id="PostalCode" placeholder="Ví dụ: " type="text">
                            <span asp-validation-for="ShopOrder.PostalCode" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="ShopOrder.City" class="form-label">Thành phố</label>
                            <input asp-for="ShopOrder.City" class="form-control" id="inputCity" placeholder="" type="text">
                            <span asp-validation-for="ShopOrder.City" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="ShopOrder.District" class="form-label">Huyện</label>
                            <input asp-for="ShopOrder.District" class="form-control" id="inputDistrict" placeholder="" type="text">
                            <span asp-validation-for="ShopOrder.District" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="ShopOrder.Ward" class="form-label">Phường</label>
                            <input asp-for="ShopOrder.Ward" class="form-control" id="inputWard" placeholder="" type="text">
                            <span asp-validation-for="ShopOrder.Ward" class="text-danger"></span>
                        </div>
                        
                    </div>

                </form>
            </div>
