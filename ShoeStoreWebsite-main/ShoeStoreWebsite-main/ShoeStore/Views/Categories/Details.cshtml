@model ShoeStore.Models.Category

@{
    ViewData["Title"] = "Category Details" + " ";
    Layout = "_AdminLayout";
}

<div class="admin-title mt-4 mb-4">
    <ion-icon name="settings-outline"></ion-icon>
    <div class="admin-title-content">
        <h5>Quản lý danh mục</h5>
        <span>Liệt kê danh sách các danh mục</span>
    </div>
</div>

<hr />
<div class="card">
    <div class="card-body">
        <div class="container p-0">
            <h3 class="title-option mb-4">Thông tin chi tiết danh mục</h3>
            <div class="row">
                <div class="col-sm-2 mb-3">
                   Tên
                </div>
                <div class="col-sm-10 mb-3">
                    @Html.DisplayFor(model => model.Name)
                </div>
                <div class="col-sm-2 mb-3">
                    Tên hiển thị
                </div>
                <div class="col-sm-10 mb-3">
                    @Html.DisplayFor(model => model.DisplayName)
                </div>
                <div class="col-sm-2 mb-3">
                    Mô tả
                </div>
                <div class="col-sm-10 mb-3">
                    @Html.DisplayFor(model => model.Description)
                </div>
                <div class="col-sm-2 mb-3">
                    @Html.DisplayNameFor(model => model.Parent)
                </div>
                <div class="col-sm-10 mb-3">
                    @Html.DisplayFor(model => model.Parent.Name)
                </div>
            </div>
            <div class="mt-3 d-flex gap-3">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn-save">
                    <i class="fa-regular fa-pen-to-square"></i></a>
                <a asp-action="Index" class="btn-back">Trở về danh sách</a>
            </div>
        </div>
    </div>
</div>
