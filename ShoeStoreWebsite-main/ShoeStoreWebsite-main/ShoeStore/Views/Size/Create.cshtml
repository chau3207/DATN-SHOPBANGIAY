@using ShoeStore.Ultitity
@model ShoeStore.Models.Size

@{
    ViewData["Title"] = "Size Create" + " ";
    Layout = "_AdminLayout";
}

@{
    if(TempData[SD.Error] != null)
    {
        <div id="error-alert" class="alert alert-danger">
             @TempData[SD.Error]
        </div>
    }
}

<script src="~/js/Error.js"></script>

<div class="admin-title mt-4 mb-4">
    <ion-icon name="settings-outline"></ion-icon>
    <div class="admin-title-content">
        <h5>Kích cỡ</h5>
        <span>Liệt kê danh sách kích thước</span>
    </div>
</div>
<hr />
<div class="card">
    <div class="card-body">
        <form asp-action="Create">
            <h3 class="title-option mb-4">Thêm mới</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-flex justify-content-center flex-column align-items-center gap-3">
                <div class="form-group col-md-6">
                    <label asp-for="Unit" class="form-label">Đơn vị</label>
                    <input asp-for="Unit" class="form-control" />
                    <span asp-validation-for="Unit" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Value" class="form-label">Giá trị</label>
                    <input asp-for="Value" class="form-control" />
                    <span asp-validation-for="Value" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-center align-items-center gap-3 mt-4">
                <div class="form-group">
                    <input type="submit" value="Thêm mới" class="btn-save" />
                </div>
                <div>
                    <a asp-action="Index" class="btn-back">Quay lại danh sách</a>
                </div>
            </div>
        </form>
    </div>
</div>
