@model ShoeStore.Models.Shoe

@{
    ViewData["Title"] = "Shoe Delete" + " ";
    Layout = "_AdminLayout";
}

<div class="admin-title mt-4 mb-4">
    <ion-icon name="settings-outline"></ion-icon>
    <div class="admin-title-content">
        <h5>Quản lý giày</h5>
        <span>Liệt kê danh sách sản phẩm</span>
    </div>
</div>

<hr />

<div>
    <h3 class="title-option mb-4">Xóa sản phẩm</h3>
    <div class="row">
        <div class="col-sm-2 mb-3">
            Tên
        </div>
        <div class="col-sm-10 mb-3">
            @Html.DisplayFor(model => model.Name)
        </div>
        <div class="col-sm-2 mb-3">
            @Html.DisplayNameFor(model => model.Active)
        </div>
        <div class="col-sm-10 mb-3">
            @Html.DisplayFor(model => model.Active)
        </div>
        <div class="col-sm-2 mb-3">
            Mô tả
        </div>
        <div class="col-sm-10 mb-3 overflow-auto" style="max-height: 250px;">
            @Html.DisplayFor(model => model.Description)
        </div>
        <div class="col-sm-2 mb-3">
            Ghi chú
        </div>
        <div class="col-sm-10 mb-3">
            @Html.DisplayFor(model => model.Note)
        </div>
        <div class="col-sm-2 mb-3">
            Ngày tạo
        </div>
        <div class="col-sm-10 mb-3">
            @Html.DisplayFor(model => model.Created) 
        </div>
        <div class="col-sm-2 mb-3">
            Ngày cập nhật
        </div>
        <div class="col-sm-10 mb-3">
            @Html.DisplayFor(model => model.Edited)
        </div>
        <div class="col-sm-2 mb-3">
            Nhãn hàng
        </div>
        <div class="col-sm-10 mb-3">
            @Html.DisplayFor(model => model.Brand.Name)
        </div>
    </div>

    <form asp-action="Delete" class="d-flex justify-content-start align-items-center gap-4 mt-4">
        <h4 class="fw-bold mb-0">Bạn có muốn xóa sản phẩm ?</h4>
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn-save" />
        <a asp-action="Index" class="btn-back">Quay lại</a>
    </form>
</div>
