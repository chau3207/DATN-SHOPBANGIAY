@model ShoeStore.Models.Color

@{
    ViewData["Title"] = "Color Edit" + " ";
    Layout = "_AdminLayout";
}

<div class="admin-title mt-4 mb-4">
    <ion-icon name="settings-outline"></ion-icon>
    <div class="admin-title-content">
        <h5>Màu sắc</h5>
        <span>Liệt kê danh sách màu sắc</span>
    </div>
</div>
<hr />
<div class="card">
    <div class="card-body">
        <form method="post" asp-action="Edit">
            <h3 class="title-option mb-4">Chỉnh sửa</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-center flex-column align-items-center gap-3">
                <div class="form-group col-md-6">
                    <label asp-for="Name" class="form-label">Tên</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Priority" class="form-label">Thứ tự ưu tiên</label>
                    <input asp-for="Priority" class="form-control" />
                    <span asp-validation-for="Priority" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-center align-items-center gap-3 mt-4">
                <div class="form-group">
                    <input type="submit" value="Lưu" class="btn-save" />
                </div>
                <div>
                    <a asp-action="Index" class="btn-back">Quay lại danh sách</a>
                </div>
            </div>
        </form>
    </div>
</div>
